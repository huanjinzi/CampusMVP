<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.campus.huanjinzi.campusmvp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SwuTask.SwuActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Swu_Theme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
        <receiver android:name=".SwuTask.BroadcastReceiverHelper">
            <intent-filter>
                <action android:name="com.campus.huanjinzi.campusmvp.LOGIN_SUCCESS"/>
                <action android:name="com.campus.huanjinzi.campusmvp.LOGOUT_SUCCESS"/>
            </intent-filter>
        </receiver>
        -->
        <activity
            android:name=".LogTask.LogActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/LogActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".TranscriptTask.TranscriptActivity"
            android:label="@string/title_transcript_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".InfoTask.InfoActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver
            android:name=".LogTask.LogActivityReceiver"
            android:enabled="true"
            android:exported="true"></receiver>
    </application>

</manifest>